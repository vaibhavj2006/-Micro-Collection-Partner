<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Dashboard</title>
  <link rel="stylesheet" href="/orders.css">
  <!-- Include Bootstrap CSS if not already -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

  <!-- Navbar moved into body -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/mcp/show">Partners</a>
        <a class="nav-item nav-link" href="/orders">Orders</a>
        <a class="nav-item nav-link " href="/mcp">CREATE</a>
      </div>
    </div>
  </nav>

  <div class="order-container">
    <header class="dashboard-header">
      <h1>Available Orders</h1>
      <div class="balance-info">
        <span>Your Balance: $<%= userr.balance %></span>
        <a href="mcp/show" class="partner-link">Partners App</a>
      </div>
    </header>

    <div class="orders-grid">
      <% for(let o of orders){ %>
        <div class="order-card">
          <div class="order-info">
            <h3 class="order-name"><%= o.name %></h3>
            <p class="order-amount">Amount: $<%= o.amount_user %></p>
          </div>
          <form action="/asign/<%= o._id %>" method="POST" class="order-form">
            <button type="submit" class="order-button">Place Order</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Include Bootstrap JS for toggling navbar -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
