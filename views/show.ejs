<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partners Dashboard</title>
    <link rel="stylesheet" href="/partners.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/mcp/show">Partners</a>
        <a class="nav-item nav-link" href="/orders">Orders</a>
        <a class="nav-item nav-link " href="/mcp">CREATE</a>
      </div>
    </div>
  </nav>

    <div class="partners-container">
        <header class="dashboard-header">
            <h1><i class="fas fa-users"></i> All Partners</h1>
            <nav class="dashboard-nav">
                <a href="/orders" class="nav-button"><i class="fas fa-clipboard-list"></i> View Orders</a>
            </nav>
        </header>

        <div class="partners-list">
            <%for(let p of patrender){%>
            <div class="partner-card">
                <div class="partner-info">
                    <h3><i class="fas fa-user"></i> <%=p.username%></h3>
                    <span class="status-badge <%=p.status%>"><%=p.status%></span>
                </div>
                <div class="partner-actions">
                    <a href="show/<%=p._id%>" class="action-button view-button">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <form action="/mcp/show/<%= p._id %>?_method=DELETE" method="POST" class="delete-form">
                        <button type="submit" class="action-button delete-button">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</body>
</html>